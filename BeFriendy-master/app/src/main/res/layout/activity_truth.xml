<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_truth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.TruthActivity"
    android:background="@android:color/holo_orange_dark">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:id="@+id/truth_question"
        android:background="@android:color/holo_green_light" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Type Your Answer"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/truth_answer"
        android:background="@android:color/holo_green_light" />

    <Button
        android:text="Decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/submit_truth"
        android:layout_toRightOf="@+id/truth_question"
        android:layout_toEndOf="@+id/truth_question"
        android:id="@+id/decline_truth_button" />

    <Button
        android:text="Submit Answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit_truth"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/decline_truth_button"
        android:layout_toStartOf="@+id/decline_truth_button"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="104dp" />
</RelativeLayout>
